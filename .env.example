# Environment Variables for Online Library Hub
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's already in .gitignore)

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# MYSQL DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=library_hub

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# ============================================
# EMAIL SERVICE (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@library-hub.com

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# THIRD PARTY SERVICES (Optional)
# ============================================
# CLOUDINARY_URL=cloudinary://your:credentials@cloud
# SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Online Library Hub
APP_URL=http://localhost:3000
APP_DESCRIPTION=A comprehensive online library management system

# ============================================
# RENDER.COM DEPLOYMENT (for production)
# ============================================
# RENDER_API_KEY=your_render_api_key_here
# DATABASE_URL=mysql://user:password@host/library_hub

